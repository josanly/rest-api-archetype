#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss} [%-5level] [%logger{15}] - %message%n%xException{5}</pattern>
		</encoder>
	</appender>
	<logger name="${package}" level="INFO"/>

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>